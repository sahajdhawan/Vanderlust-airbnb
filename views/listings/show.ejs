<% layout("/layouts/boilerplate.ejs") %>
<body>
  <div class="row">
    <div class="col-8 offset-3 mt-3">
    <h3><b><%= allListings.title %></h3>
    </div>
<div class="card col-6 offset-3 show-card listing-card">  <img src="<%= allListings.image %>" class="card-img-top show-img" alt="listing_image">
  <div class="card-body">
    <p class="card-text"><b><%= allListings.title %></b>
    <br><%=allListings.description %><br>
    &#8377;<%=allListings.price.toLocaleString("en-IN") %> <br>
    <%=allListings.location %> <br>
    <%=allListings.country %>
  </p>
 

</div>
</div>
<div class="btns">
  <a class="btn btn-dark col-1 offset-3 edit-btn"href="/listings/<%= allListings._id %>/edit">Edit</a>  

  <form action="/listings/<%= allListings._id %>?_method=DELETE" method="POST">
    <button class="btn btn-dark offset-5"> Delete</button>
  </form>

</div>
<div class="col-8 offset-3">
  <hr>
  <h4>Leave a Review</h4>
  <form action="/listings/<%= allListings.id %>/reviews" method="POST" novalidate class="needs-validation">
    <div class="mb-3 mt-3">
      <label for="rating" class="form-label">Rating</label>
      <input type="range" max="5" min ="1" id="rating" name="review[rating]" class="form-range">
    </div>
    <div class="mb-3 mt-3">
      <label for="comment" class="form-label">Comments</label>
      <br>
      <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control"  required ></textarea>
    <div class="invalid-feedback">Please submit some comments for review</div>
    </div>
    <button class="btn btn-outline-dark"> Submit</button>
  </form>
  <hr/>
  <p><b>All reviews</b></p>
<div class="row">
  <% for(review of allListings.reviews) { %>
 <div class="card col-5 mb-3 ms-3 ">
  <div class="card-body">
    <h5 class="card-title">Jean Doe</h5>
    <p class="card-text"> <%=review.comment %> </p>
    <p class="card-text"> <%=review.rating %> &#9734 </p>
  </div>
  <form action="/listings/<%= allListings.id %>/reviews/<%= review._id %>?_method=DELETE" class="mb-3" method="POST">
    <button class="btn btn-sm btn-dark">Delete</button>
  </form>
 </div>
 <% } %>
</div>
</div> 
</div>


</body>
